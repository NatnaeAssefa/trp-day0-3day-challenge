{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://project-chimera.dev/schemas/task-payload.json",
  "title": "Agent Task (Planner → Worker)",
  "description": "Payload passed from Planner to Worker via TaskQueue. SRS §6.2 Schema 1; specs/technical.md §1.",
  "type": "object",
  "required": ["task_id", "task_type", "priority", "context", "created_at", "status"],
  "properties": {
    "task_id": { "type": "string", "format": "uuid", "description": "Unique task identifier (UUID v4)." },
    "task_type": {
      "type": "string",
      "enum": ["generate_content", "reply_comment", "execute_transaction"],
      "description": "Task kind."
    },
    "priority": {
      "type": "string",
      "enum": ["high", "medium", "low"],
      "description": "Task priority."
    },
    "context": {
      "type": "object",
      "required": ["goal_description"],
      "properties": {
        "goal_description": { "type": "string" },
        "persona_constraints": { "type": "array", "items": { "type": "string" } },
        "required_resources": { "type": "array", "items": { "type": "string" }, "description": "MCP resource URIs." }
      }
    },
    "assigned_worker_id": { "type": "string", "description": "Worker instance identifier (optional at enqueue)." },
    "created_at": { "type": "string", "format": "date-time", "description": "ISO 8601 or Unix ms." },
    "status": {
      "type": "string",
      "enum": ["pending", "in_progress", "review", "complete"],
      "description": "Task status."
    }
  }
}
